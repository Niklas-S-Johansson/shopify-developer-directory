    <script>
        let lastScrollY = 0;
        const header = document.querySelector('header');

        window.addEventListener('scroll', () => {
            if (window.scrollY > lastScrollY && window.scrollY > 100) {
                header.classList.add('hidden');
            } else {
                header.classList.remove('hidden');
            }
            lastScrollY = window.scrollY;
        });
    </script>

    <script>
        const data = JSON.parse(document.getElementById('profileData').textContent);
        document.getElementById('pf-name').textContent = data.fullName;
        document.getElementById('pf-pic').src = data.profilePic;
        document.getElementById('pf-location').textContent = data.location;
        document.getElementById('pf-bio').textContent = data.bio;
        document.getElementById('pf-website').href = data.website;
        document.getElementById('pf-status').textContent = data.status;
        document.getElementById('pf-lang-vn').textContent = data.languages.vietnamese;
        document.getElementById('pf-lang-en').textContent = data.languages.english;
        document.getElementById('pf-project1').textContent = data.project1;
        document.getElementById('pf-project2').textContent = data.project2;
        document.getElementById('pf-skills').innerHTML = skills
          .map(s => `<li>${s}</li>`)
          .join('');
    </script>
